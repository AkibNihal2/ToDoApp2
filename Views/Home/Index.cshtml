@using To_DoApp.Enum
@model To_DoApp.Models.ToDoListViewModel

@{
    ViewData["Title"] = "To-Do List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">To-Do List</h2>
        </div>
        <div class="col-6 text-end">
            <div class="btn-group">
                <a asp-action="Create" class="btn btn-primary me-2">
                    <i class="bi bi-plus-circle"></i> Add Task
                </a>
                <a asp-controller="Category" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-tag"></i> Add Category
                </a>
            </div>
        </div>
    </div>

    <!-- Add the filter form -->
    <div class="border p-3 mt-4 mb-4">
        <form asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Search</label>
                        <input type="text" name="SearchString" class="form-control" value="@Model.SearchString" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Status</label>
                        <select name="StatusFilter" class="form-control">
                            <option value="">All Statuses</option>
                            @foreach (var status in Model.AvailableStatuses)
                            {
                                <option value="@status.Value" selected="@(status.Value == Model.StatusFilter)">@status.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Category</label>
                        <select name="CategoryFilter" class="form-control">
                            <option value="">All Categories</option>
                            @foreach (var category in Model.AvailableCategories)
                            {
                                <option value="@category.Value" selected="@(category.Value == Model.CategoryFilter)">@category.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="form-group">
                        <input type="submit" value="Filter" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="border p-3 mt-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ToDoList)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.DueDate?.ToString("MM/dd/yyyy")</td>
                        <td>@item.CategoryName</td>
                        <td>
                            <span class="badge @GetStatusClass(item.StatusId)">
                                @GetStatusName(item.StatusId)
                            </span>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    string GetStatusClass(int statusId)
    {
        return statusId switch
        {
            (int)ToDoStatus.Todo => "bg-secondary",
            (int)ToDoStatus.InProgress => "bg-warning",
            (int)ToDoStatus.Completed => "bg-success",
            _ => "bg-secondary"
        };
    }

    string GetStatusName(int statusId)
    {
        return ((ToDoStatus)statusId).ToString();
    }
}