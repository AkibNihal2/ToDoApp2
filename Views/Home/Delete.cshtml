@model To_DoApp.Models.ToDo
@using To_DoApp.Models

@{
    ViewData["Title"] = "Delete Task";
}

<form method="post" onsubmit="return confirmDelete()">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Task</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" disabled class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="DueDate"></label>
            <input asp-for="DueDate" type="date" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId"></label>
            <input asp-for="Category.CategoryName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Status"></label>
            <input asp-for="Status" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this task?\n\nTitle: @Model.Title\nCategory: @Model.Category?.CategoryName');
        }
    </script>
}