@using To_DoApp.Enum
@model To_DoApp.Models.ToDoModel

@{
    ViewData["Title"] = "Delete Task";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-primary">Delete Task</h2>
            <hr />
        </div>
    </div>

    <div class="border p-3 mt-4">
        <h3 class="text-danger">Are you sure you want to delete this?</h3>

        <dl class="row mt-4">
            <dt class="col-sm-2">Title:</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Description:</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Due Date:</dt>
            <dd class="col-sm-10">@Model.DueDate?.ToString("MM/dd/yyyy")</dd>

            <dt class="col-sm-2">Status:</dt>
            <dd class="col-sm-10">
                <span class="badge @GetStatusClass(Model.StatusId)">
                    @GetStatusName(Model.StatusId)
                </span>
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger" style="width:150px">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary" style="width:150px">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@functions {
    string GetStatusClass(int statusId)
    {
        return statusId switch
        {
            (int)ToDoStatus.Todo => "bg-secondary",
            (int)ToDoStatus.InProgress => "bg-warning",
            (int)ToDoStatus.Completed => "bg-success",
            _ => "bg-secondary"
        };
    }

    string GetStatusName(int statusId)
    {
        return ((ToDoStatus)statusId).ToString();
    }
}