@model To_DoApp.Models.ToDoCreateEditViewModel

@{
    ViewData["Title"] = "Create Task";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-primary">Create New Task</h2>
            <hr />
        </div>
    </div>

    <div class="border p-3 mt-4">
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="ToDo.Title" class="form-label"></label>
                <input asp-for="ToDo.Title" class="form-control" />
                <span asp-validation-for="ToDo.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ToDo.Description" class="form-label"></label>
                <textarea asp-for="ToDo.Description" class="form-control"></textarea>
                <span asp-validation-for="ToDo.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ToDo.DueDate" class="form-label"></label>
                <input asp-for="ToDo.DueDate" type="date" class="form-control" />
                <span asp-validation-for="ToDo.DueDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ToDo.CategoryId" class="form-label"></label>
                <select asp-for="ToDo.CategoryId" asp-items="Model.Categories" class="form-select">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="ToDo.CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ToDo.StatusId" class="form-label"></label>
                <select asp-for="ToDo.StatusId" asp-items="Model.Statuses" class="form-select"></select>
                <span asp-validation-for="ToDo.StatusId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary" style="width:150px">
                    <i class="bi bi-save"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-secondary" style="width:150px">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const dueDateInput = document.getElementById('ToDo_DueDate');
            if (dueDateInput && !dueDateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                dueDateInput.value = today;
            }
        });
    </script>
}